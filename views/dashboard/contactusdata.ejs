<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us Data</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS */
        body {
      font-family: 'Roboto', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
    }
    /* Container */
    .container {
      max-width: 1200px;
      margin: 20px auto;
      display: flex;
      gap: 20px;
    }

    /* Sidebar */
    .col-3 {
      flex: 1;
      background-color: #f1f1f1;
      border-right: 1px solid #ddd;
    }

    /* Main Content */
    .col-9 {
      flex: 3;
      background-color: #ffffff;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }


        .table th,
        .table td {
            vertical-align: middle;
        }

        .no-data {
            font-size: 1.2rem;
            color: #6c757d;
            text-align: center;
            margin-top: 50px;
        }

        .container-fluid {
            margin-top: 20px;
        }

        .sidebar {
            background-color: #f1f1f1;
            border-right: 1px solid #ddd;
            padding: 20px;
        }

        .table-wrapper {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table-title {
            font-size: 1.8rem;
            color: #3f51b5;
            margin-bottom: 20px;
        }

        .btn-custom {
            font-size: 0.9rem;
            padding: 6px 12px;
        }

        .btn-warning {
            background-color: #f39c12;
            border-color: #f39c12;
        }

        .btn-warning:hover {
            background-color: #e67e22;
            border-color: #e67e22;
        }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header>
        <%- include('../dashboard/header.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-3 sidebar">
                <%- include('../dashboard/left.ejs') %>
            </aside>

            <!-- Main Content -->
            <main class="col-9">
                <div class="table-wrapper">
                    <h1 class="table-title">Registered People</h1>

                    <% if (contactdata.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-primary">
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Message</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (var i = 0; i < contactdata.length; i++) { %>
                                <tr>
                                    <td><%= contactdata[i].name %></td>
                                    <td><%= contactdata[i].email %></td>
                                    <td><%= contactdata[i].phone %></td>
                                    <td><%= contactdata[i].message %></td>
                                    <td class="text-center">
                                        <a href="/edit_2/<%= contactdata[i]._id %>" class="btn btn-warning btn-custom me-2">
                                            Edit
                                        </a>
                                        <a href="/delete_2/<%= contactdata[i]._id %>" class="btn btn-danger btn-custom">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <p class="no-data">No records found.</p>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html> 